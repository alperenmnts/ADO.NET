@model UrunStokUygulamasi.Models.Urunler

@{
    ViewBag.Title = "Stok";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Satın Alma Sayfası</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group" style="margin-top:10px">
            <p>Kaç tane ürün almak istiyorsunuz?</p>
            <div class="col-md-10" style="margin-top:2px">
                @Html.EditorFor(model => model.StokTemp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Stok, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-top:15px; float:right">
                <input type="submit" value="Satın Al" class="btn btn-success" id="createBtn" />
            </div>
        </div>

        <div class="form-group" style="margin-top:15px">
            <div class="col-md-offset-2 col-md-10">
                <label style="color:red">@ViewBag.Notification</label>
            </div>
        </div>
    </div>
}
